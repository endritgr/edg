<h2>Create Post</h2>

<form action="/posts" method="post"role="form">
  <div>
  	<label for="post_title">Title:</label>
  	<br>
  	<input id="post_title" name="title" type="text" value="<%= @post.title %>" style="width=90%"/>
  </div>
  <div>
  	<label for="post_body">Body:</label>
  	<br>
  	<textarea id="post_body" name="body" rows="10"><%= @post.body %></textarea>
  </div>
  <button type="submit">Submit</button>
</form>